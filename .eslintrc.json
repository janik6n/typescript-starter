{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "import/no-extraneous-dependencies": [
      0
    ],
    "import/no-unresolved": 0,
    "no-plusplus": 0
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}